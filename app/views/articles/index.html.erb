<h1>Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'article_title' %>
    </li>
  <% end %>
</ul>

<% if logged_in? %>
  <%= link_to "New article", new_article_path, class: 'nav', method: :get %>
  <%= link_to "Logout", logout_path, class: "nav" %>
<% else %>
  <%= link_to "Login", login_path, class: "nav" %>
<% end %>
