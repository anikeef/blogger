<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>

    <%= f.text_field :title, placeholder: "Title" %>
  </p>
  <p>

    <%= f.text_area :body, placeholder: "Text"%>
  </p>
  <p>

    <%= f.text_field :tag_list, placeholder: "Tags, e.g. \"ruby, rails\"" %>
  </p>
  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url, width: "200px" %><br>
    <% end %>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>

    <%= f.submit %>

<% end %>
